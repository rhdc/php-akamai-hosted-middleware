{
    "name": "rhdc/akamai-hosted-middleware",
    "description": "PSR-7 HTTP client middleware for Akamai-hosted sites",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shawn Iwinski",
            "email": "siwinski@redhat.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.5",
        "guzzlehttp/psr7": "^1.4",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpunit/phpunit": "^4.8.35 || ^5.7.11 || ^6.0.5"
    },
    "suggest": {
    },
    "autoload": {
        "psr-4": {
            "Rhdc\\Akamai\\Hosted\\Middleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rhdc\\Akamai\\Hosted\\Middleware\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs:check": "php-cs-fixer --allow-risky=yes --diff --dry-run fix .",
        "cs:fix": "php-cs-fixer --allow-risky=yes --diff fix .",
        "lint": "parallel-lint --exclude .git --exclude vendor .",
        "test": "phpunit"
    }
}
